@model BloodBankManagement.ViewModel.AddDonorViewModel;
@if (User.Identity.IsAuthenticated)
{
    <h3>Add Donor</h3>  
}
else
{
    <h3>Please update the following details to donate blood:</h3>
}
<hr />
<form asp-controller="StaffLogin" asp-action="AddDonor" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>

        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" />
        <span asp-validation-for="DateOfBirth"></span>
    </div>
    <div class="form-group">
        <label asp-for="Line1">Address Line 1</label>
        <input asp-for="Line1" />
        <span asp-validation-for="Line1"></span>
    </div>
    <div class="form-group">
        <label asp-for="Line2">Address Line 2</label>
        <input asp-for="Line2" />
        <span asp-validation-for="Line2"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" />
        <span asp-validation-for="State"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zip"></label>
        <input asp-for="Zip" />
        <span asp-validation-for="Zip"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Contact Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactNum">Contact Number</label>
        <input asp-for="ContactNum" />
        <span asp-validation-for="ContactNum"></span>
    </div>
    <div class="form-group">
        <label asp-for="BloodGroup">Blood Group</label>
        <select asp-for="BloodGroup" asp-items="Model.BloodGroups"></select>
        <span asp-validation-for="BloodGroup"></span>
    </div>
    <hr />
    <input type="submit" value="Update" />
</form>
