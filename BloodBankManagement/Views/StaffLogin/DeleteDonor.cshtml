@{
}

<h1>Delete Donor</h1>
@if (ViewBag.donors.Count == 0)
{
    <p>No Donor data available!</p>
}
else
{
    <form method="post">
        <table class="job-listing">
            <tr>
                <th>Donor ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Location</th>
                <th>Select the Donor</th>
            </tr>

            @foreach (var donor in ViewBag.donors)
            {
                <tr>
                    <td>@donor.Id</td>
                    <td>@donor.FirstName</td>
                    <td>@donor.LastName</td>
                    <td>@donor.Address.City, @donor.Address.State</td>
                    <td><input type="checkbox" name="donorIds" value="@donor.Id" class="form-control"></td>
                </tr>
            }
        </table>
        <input type="submit" value="Delete Selected Donors" class="btn btn-danger">
    </form>
}
