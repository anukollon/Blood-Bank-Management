@model BloodBankManagement.ViewModel.AddDonorViewModel;
<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="ListDonor" asp-action="EditDonor" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Edit Donor</h4>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Id" type="hidden" value="@Model.Id" />
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <hr />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group required">
                                    <label asp-for="FirstName" class="font-weight-bold">First Name</label>
                                    <input asp-for="FirstName" placeholder="First Name" class="form-control" value="@Model.FirstName" />
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group required">
                                    <label asp-for="LastName" class="font-weight-bold">Last Name</label>
                                    <input asp-for="LastName" placeholder="Last Name" class="form-control" value="@Model.LastName" />
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group required">
                                    <label asp-for="DateOfBirth" class="font-weight-bold"></label>
                                    <input asp-for="DateOfBirth" class="form-control" value="@Model.DateOfBirth" />
                                    <span asp-validation-for="DateOfBirth"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group required">
                                    <label asp-for="BloodGroup" class="font-weight-bold">Blood Group</label>
                                    <select asp-for="BloodGroup" asp-items="Model.BloodGroups" class="form-control" value="@Model.BloodGroup"></select>
                                    <span asp-validation-for="BloodGroup"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group required">
                                    <label asp-for="Email" class="font-weight-bold"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Email address" value="@Model.Email" />
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group required">
                                    <label asp-for="ContactNum" class="font-weight-bold"></label>
                                    <input asp-for="ContactNum" class="form-control" placeholder="Phone Number" value="@Model.ContactNum" />
                                    <span asp-validation-for="ContactNum"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group required">
                                    <label asp-for="Line1" class="font-weight-bold">Address Line 1</label>
                                    <input asp-for="Line1" class="form-control" value="@Model.Line1" />
                                    <span asp-validation-for="Line1"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Line2" class="font-weight-bold">Address Line 2</label>
                                    <input asp-for="Line2" class="form-control" value="@Model.Line2" />
                                    <span asp-validation-for="Line2"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group required">
                                    <label asp-for="City" class="font-weight-bold"></label>
                                    <input asp-for="City" class="form-control" placeholder="City" value="@Model.City" />
                                    <span asp-validation-for="City"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group required">
                                    <label asp-for="State" class="font-weight-bold"></label>
                                    <select asp-for="State" asp-items="Model.States" class="form-control" value="@Model.State"></select>
                                    <span asp-validation-for="State"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group required">
                                    <label asp-for="Zip" class="font-weight-bold"></label>
                                    <input asp-for="Zip" class="form-control" placeholder="ZIP Code" value="@Model.Zip" />
                                    <span asp-validation-for="Zip"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <hr />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="form-group">
                                    <input type="submit" value="Update" class="btn-primary btn-block btn-lg" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
