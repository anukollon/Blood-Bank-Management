@{
}
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            @if (TempData["msg"] != null)
                            {
                                <h4 class="alert-info">@TempData["msg"].ToString()</h4>
                                <hr/>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Manage Blood Stock</h4>
                        </div>
                    </div>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12 align-content-center">
                                <table class="donor-listing">
                                    <tr>
                                        <th>Blood Group</th>
                                        <th>Quantity</th>
                                        <th></th>
                                    </tr>

                                    @foreach (var bloodStock in ViewBag.bloodStock)
                                    {
                                        <tr>
                                            <td>@bloodStock.BloodGroup</td>
                                            <td>@bloodStock.Quantity</td>
                                            <td><a asp-controller="ManageStock" asp-action="EditStock" asp-route-value="@bloodStock.Id" Text="Edit Stock" CssClass="ButtonClass">Edit</a></td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
